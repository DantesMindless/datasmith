{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Python Debugger: Attach to Django",
            "type": "debugpy",
            "request": "attach",
            "connect": {
              "host": "localhost",
              "port": 3000
            },
            "pathMappings": [
                {
                  "localRoot": "${workspaceFolder}/backend",        // Path on your host
                  "remoteRoot": "/app"                      // Path inside container
                }
              ]
        }
    ]
}
